[module/git-status]
type = custom/script
interval = 3600
format = <label>
format-prefix = "ÔÑ¶ "
label = "%output:0:150%"
exec = uncommitted ~ &>/dev/null | grep ^/ &>/dev/null | tee >(wc -l) &>/dev/null

