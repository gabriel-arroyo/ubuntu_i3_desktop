# #---Basic Bindings---# #
bindsym $mod+Return 			exec $term
bindsym $mod+Shift+Return		exec --no-startup-id code ~/.config/i3/config

bindsym $mod+Shift+space 		floating toggle
bindsym $mod+space				focus mode_toggle

#bindsym $mod+Shift+Escape 	exec --no-startup-id ~/.scripts/prompt "Are you sure you want to leave i3?" "i3-msg exit"

bindsym $mod+BackSpace			exec --no-startup-id ~/.scripts/prompt "Are you sure you want to leave i3?" "i3-msg exit"
bindsym $mod+Shift+BackSpace	exec --no-startup-id ~/.scripts/prompt "Are you sure you want to reboot?" $reboot

bindsym $mod+Shift+bar			exec --no-startup-id $spt/deskopen ~/Desktop/calendario.desktop
bindsym $mod+bar				exec --no-startup-id zenity --calendar

#bindsym $mod+grave		exec --no-startup-id $term
##bindsym $mod+asciitilde

#STOP/HIDE EVERYTHING:
bindsym $mod+Shift+Delete		exec --no-startup-id lmc truemute ; exec $truepause ; workspace lmao ; exec $term -e htop ; exec $term -e ranger

# #---Letter Key Bindings---# #
