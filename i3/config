bindsym $mod+Shift+u			exec --no-startup-id "bash ~/.scripts/i3resize down"

bindsym $mod+i 					exec $term -e htop
bindsym $mod+Shift+i			exec --no-startup-id "bash ~/.scripts/i3resize up"

